<Window
    x:Class="CSWPFDataGridCustomSort.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:CSWPFDataGridCustomSort"
    Title="DataGrid Custom Sort"
    Width="300"
    Height="300"
    WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <local:Employees x:Key="employees" />
    </Window.Resources>
    <Grid>
        <DataGrid
            x:Name="datagrid"
            AutoGenerateColumns="False"
            ItemsSource="{StaticResource employees}"
            Sorting="WPF_DataGrid_Sorting">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Path=Alias}"
                    Header="Alias" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Path=Name}"
                    Header="Name" />
                <DataGridTextColumn
                    Width="1.5*"
                    Binding="{Binding Path=Job}"
                    Header="Job" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>